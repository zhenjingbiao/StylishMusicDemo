<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏的颜色-->
        <item name="colorPrimary">@color/mp.theme.dark_blue.colorPrimary</item>
        <!--顶部状态栏的颜色-->
        <item name="colorPrimaryDark">@color/mp.theme.dark_blue.colorPrimaryDark</item>
        <!--一般控件使用这个颜色-->
        <item name="colorAccent">@color/mp.theme.dark_blue.colorAccent</item>
        <!--导航栏中标题的颜色-->
        <item name="android:textColorPrimary">@color/mp.theme.dark_blue.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/mp.theme.dark_blue.textColorSecondary</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@color/mp.theme.dark_blue.background</item>

        <!--各控件默认颜色-->
        <item name="colorControlNormal">?attr/colorAccent</item>
        <!--控件被选中时的颜色-->
        <item name="colorControlActivated">@color/mp.theme.dark_blue.colorControlActivated</item>
        <!--控件被按压的颜色-->
        <item name="colorControlHighlight">@color/mp.theme.dark_blue.colorControlHighlight</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>

        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MP.Theme.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MP.Theme.Widget.ActionMode.CloseButton</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/MP.Theme.Widget.AlertDialog</item>

        <!-- PopupMenu -->
        <item name="popupMenuStyle">@style/MP.Theme.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/MP.Theme.TextAppearance.LargePopupMenu
        </item>
        <item name="textAppearanceSmallPopupMenu">@style/MP.Theme.TextAppearance.SmallPopupMenu
        </item>
    </style>

    <style name="MP.Theme" parent="AppTheme"/>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.Title"
           parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>

    </style>
    <!-- TextAppearance -->

    <style name="MP.Theme.TextAppearance">
        <item name="fontPath">@string/mp.font.roboto.monospace.regular</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/mp.text.list.hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/selector_list_title_text</item>
        <item name="android:textSize">@dimen/mp.text.list.title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MP.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.EndSummary">
        <item name="android:id">@id/text_view_summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:textSize">@dimen/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding.large</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/mp.theme.dark_blue.actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/MP.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.Widget.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mp.theme.dark_blue.background</item>
    </style>

    <style name="MP.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/mp.popupMenu.background</item>
        <item name="android:dropDownHorizontalOffset">-24dp</item>
    </style>

    <style name="MP.Theme.TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.Widget"/>


    <style name="MP.Theme.Widget.Divider">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/mp.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Vertical">
        <item name="android:layout_height">@dimen/divider.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Horizontal">
        <item name="android:layout_width">@dimen/divider.line</item>
    </style>

    <style name="MP.Theme.Widget.RecyclerView">

        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/mp.list.scrollThumb</item>
        <item name="android:scrollbarSize">@dimen/mp.list.scrollbarSize</item>
        <item name="layoutManager">@string/mp.list.layoutManager.linear</item>

    </style>

    <style name="MP.Theme.Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

</resources>
